{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "allowJs": true,
    "rootDir": "src/server",
    "sourceMap": true,
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
