{
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"jsx": "preserve",
		"target": "ESNext",
		"module": "ESNext",
		"removeComments": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"noUnusedParameters": true,
		"jsxFactory": "createElement",
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/server"
	]
}